<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.cisco.jabber.guest.PreviewView
        android:id="@+id/jgsdk_preview_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/jgsdk_tag_mute_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/jgsdk_bkgd_docklet_left"
        android:contentDescription="@string/jgsdk_video_muted"
        android:padding="10dp"
        android:src="@drawable/jgsdk_ic_video_stopped"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <Button
            android:id="@+id/jgsdk_call_button"
            style="@style/jgsdk_button.preview"
            android:text="@string/jgsdk_call" />

        <TextView
            android:id="@+id/jgsdk_text_video_stopped"
            style="@style/jgsdk_textview.video"
            android:text="@string/jgsdk_video_stopped"
            android:paddingStart="4dp"
            android:visibility="gone"/>
    </LinearLayout>

</RelativeLayout>